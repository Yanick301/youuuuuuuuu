
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures are readable by everyone, but only writable by the owner.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
     // Receipts can be written by authenticated users to their own order folder.
    match /receipts/{orderId}/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
