
rules_version = '2';

function isAdmin() {
  // Check if the user has an 'isAdmin' custom claim or a field in their Firestore profile.
  return get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isAdmin == true;
}

service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures are readable by everyone, but only writable by the owner.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Order receipts can be written by any authenticated user into their own path,
    // and read by the user OR an admin.
    match /receipts/{userId}/{orderId}/{fileName} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Allow write if the user is authenticated. The path security is handled by the client logic.
      allow write: if request.auth != null;
    }
  }
}
