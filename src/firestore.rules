
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // WARNING: These rules are overly permissive and are intended for development purposes only.
    // They allow any authenticated user to read and write to any document in the database.
    // For a production environment, you should implement more restrictive rules.
    match /{document=**} {
      allow read: if request.auth != null;
    }

    match /products/{productId} {
      allow read: if true;
    }
    
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /userProfiles/{userId} {
      allow read: if true;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }
    
    match /userProfiles/{userId}/favorites/{docId} {
       allow read, write: if request.auth.uid == userId;
    }

    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId;
    }
  }
}
