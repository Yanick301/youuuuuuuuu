
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Products and Reviews: Allow anyone to read, but only admins to write.
    match /products/{productId} {
      allow read: if true;
      // In the future, we can restrict write access to admins.
      allow write: if request.auth != null; 
    }
    
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      // Only authenticated users can create reviews.
      allow create: if request.auth != null;
    }

    // User Profiles: Users can only read and write their own profile.
    match /userProfiles/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Favorites subcollection
    match /userProfiles/{userId}/favorites/{docId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Orders: Authenticated users can create orders for themselves.
    // They can only read orders where their userId matches.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null && get(/databases/$(database)/documents/orders/$(orderId)).data.userId == request.auth.uid;
    }
  }
}
