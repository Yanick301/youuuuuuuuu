
rules_version = '2';

// Check if the user has the 'isAdmin' custom claim.
function isAdmin() {
  return get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.isAdmin == true;
}

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Products can be read by anyone, but only written by admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reviews can be read by anyone, but only created by authenticated users.
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // User profiles can only be read and written by their owner.
    // Admins can also get any single user profile.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow get: if isAdmin();
    }
    
    // User can manage their own cart items.
    match /userProfiles/{userId}/cartItems/{itemId} {
      allow list, read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Orders collection is now at the root.
    match /orders/{orderId} {
      // Anyone can create an order.
      allow create: if request.auth != null;
      
      // User can upload their own receipt (update), with validation on the receipt image size.
      allow update: if request.auth != null && request.auth.uid == request.resource.data.userId
                       && request.resource.data.receiptImageUrl.size() < 1048576; // 1MB limit

      // ONLY ADMINS can read, list, and update order statuses for any order.
      allow read, list, update: if isAdmin();
    }
  }
}
