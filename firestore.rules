
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Products and their reviews are public.
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Writing to products is not allowed from the client.

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null; // Only authenticated users can create reviews.
        allow update, delete: if false; // Reviews are immutable.
      }
    }

    // User-specific data is private.
    // A user can only access their own documents.
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // This rule applies to subcollections under userProfiles, like 'favorites'.
      match /{subcollection}/{docId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Orders are private.
    // A user can create, read, and update their own orders.
    match /orders/{orderId} {
      allow create, read, update: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if false; // Users cannot delete orders.
    }

    // Default deny: Disallow any other access to prevent accidental data exposure.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
